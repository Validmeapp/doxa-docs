{
  "name": "multilingual-docs-portal",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "next dev",
    "dev:enhanced": "tsx scripts/dev-server.ts",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build --webpack",
    "build:optimized": "tsx scripts/build-optimized.ts",
    "build:production": "tsx scripts/build-optimized.ts --lighthouse",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:content": "tsx scripts/content-linter.ts check",
    "lint:content:report": "tsx scripts/content-linter.ts report",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "validate:content": "tsx scripts/validate-content.ts",
    "performance:analyze": "tsx scripts/performance-monitor.ts",
    "performance:build": "tsx scripts/performance-monitor.ts --build",
    "performance:lighthouse": "tsx scripts/performance-monitor.ts --lighthouse",
    "content:create": "tsx scripts/content-authoring.ts create",
    "content:list": "tsx scripts/content-authoring.ts list",
    "content:validate": "tsx scripts/content-authoring.ts validate",
    "content:translate": "tsx scripts/content-authoring.ts translate",
    "content:watch": "tsx scripts/content-authoring.ts watch",
    "db:init": "tsx scripts/db-cli.ts init",
    "db:migrate": "tsx scripts/db-cli.ts migrate up",
    "db:migrate:down": "tsx scripts/db-cli.ts migrate down",
    "db:migrate:status": "tsx scripts/db-cli.ts migrate status",
    "db:seed": "tsx scripts/db-cli.ts seed run",
    "db:seed:reset": "tsx scripts/db-cli.ts seed reset",
    "db:health": "tsx scripts/db-cli.ts health",
    "db:info": "tsx scripts/db-cli.ts info",
    "test:content": "node -r tsx/cjs scripts/test-navigation-builder.ts",
    "test:mdx": "node -r tsx/cjs scripts/test-mdx-processor.ts",
    "test:code-block": "node -r tsx/cjs scripts/test-code-block.ts",
    "search:build": "tsx scripts/build-search-index.ts",
    "search:cleanup": "tsx scripts/cleanup-search-data.ts",
    "sitemap:generate": "tsx scripts/generate-sitemaps.ts",
    "build:full": "npm run search:build && npm run sitemap:generate && npm run build"
  },
  "keywords": [
    "documentation",
    "multilingual",
    "nextjs",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "description": "Modern multilingual documentation portal built with Next.js",
  "dependencies": {
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "^16.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "better-sqlite3": "^12.4.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "commander": "^14.0.1",
    "critters": "^0.0.23",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.546.0",
    "next": "^16.0.0",
    "pagefind": "^1.4.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rehype": "^13.0.2",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-code-titles": "^1.2.0",
    "rehype-highlight": "^7.0.2",
    "rehype-slug": "^6.0.0",
    "remark": "^15.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-mdx-frontmatter": "^5.2.0",
    "remark-toc": "^9.0.0",
    "shiki": "^3.13.0",
    "tailwind-merge": "^3.3.1",
    "typescript": "^5.9.3",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@tailwindcss/postcss": "^4.1.16",
    "autoprefixer": "^10.4.21",
    "chokidar": "^4.0.3",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.1.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "remark-mdx": "^3.1.0",
    "tailwindcss": "^4.1.16",
    "tsx": "^4.20.6",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
